<section class="page-header-section set-bg" >
		<div class="container">
			<div class="section-title pt-5">
				<h1 style="color: white;">Contact Us</h1>
			</div>
		</div>
	</section>
	<!-- Page header section end -->


	<!-- Page section start -->
	<section class="page-section pt100">
		<div class="container pb100">
			<div class="section-title pt-5">
				<h1 style="color: white;">Get in touch</h1>
			</div>
			<div class="row">
				<p style="text-align: center;">Ready to start your next Succes with us? <br>That's great ! Give us a call or send us an email and we will get back to you in no time.</p>
			</div>
			<div class="row">
				<div class="col-lg-3 contact-info mb-5 mb-lg-0">
					<p>Address: Addis Ababa,Ethiopia Ethio China road Wengelawit building 1st floor room 111 </p>
					<p>Phone: +251 111111111</p>
					<p>Email: yourmail@gmail.com</p>
					<div class="cf-social">
							<a href="#"><i class="fa fa-linkedin"></i></a>
							<a href="#"><i class="fa fa-facebook"></i></a>
					</div>
				</div>
				<div class="col-lg-9">
					<%= form_for( :contact , url: new_contact_path) do |form| %>
					<form class="contact-form">
 				<%= form.text_field :user_name,   maxlength: 30 , :required => true , class: "form-control" , :placeholder =>"Enter your name" %> <br>
				<%= form.text_field :email ,   maxlength: 50 , :required => true , class: "form-control", :type => 'email', :placeholder => "Enter your email address" %> <br>

 				<%= form.text_area :message ,:required => true , class: "form-control", :placeholder =>"Message ..." %> <br><br>
				<%= form.button "Send", class: "site-btn sb-dark" %>	
					</form>
				  <% end %> 	
				</div>
			</div>
		</div>
		<div class="map-area" id="map-canvas">
			<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3273.820623896886!2d38.761518114208606!3d8.981332693553956!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x164b8441bff493f7%3A0x1aadfbf166707827!2sWengelawit+Building!5e1!3m2!1sen!2set!4v1562584826674!5m2!1sen!2set" width="1350" height="650" frameborder="0" style="border:0" allowfullscreen></iframe>
		</div>
	</section>
	<!-- Page section end -->





	 


